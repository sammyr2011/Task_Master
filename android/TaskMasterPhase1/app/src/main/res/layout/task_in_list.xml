<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewThumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="80dp"
        android:minWidth="80dp"
        android:src="@android:drawable/star_big_off" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This Is The Name Of An Auction"
        android:id="@+id/textViewTItle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewThumbnail"
        android:layout_toEndOf="@+id/imageViewThumbnail"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="9 Days Left"
        android:id="@+id/textViewTimeLeft"
        android:layout_alignBottom="@+id/imageViewThumbnail"
        android:layout_toRightOf="@+id/imageViewThumbnail"
        android:layout_toEndOf="@+id/imageViewThumbnail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$75.00"
        android:id="@+id/textViewCurBid"
        android:layout_alignTop="@+id/textViewTimeLeft"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>